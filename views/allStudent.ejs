<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/bootstrap.css" />
    <title>Student</title>
  </head>
  <body class="container">
    <h1 class="text-center">Welcome to student Academy</h1>

    <table class="table mt-3">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Profile</th>
          <th scope="col">Name</th>
          <th scope="col">Course</th>
          <th scope="col">Status</th>
          <th scope="col">Date</th>
          <th scope="col">Update</th>
          <th scope="col">Delete</th>
          <!-- <th scope="col">Date</th> -->
        </tr>
      </thead>
      <tbody>
        <% let c=0; %> <% data.forEach(d=>{ %>
        <tr>
          <th scope="row"><%= ++c %></th>
          <td>
            <% if (d.image) { %>
            <img
              src="./upload/<%= d.image %>"
              height="35px"
              style="border-radius: 20px"
            />
            <% } else { %>
            <img
              height="35px"
              style="border-radius: 20px"
              src="./upload/businessman-gbacf40e5b_1920.png"
            />
            <% } %>
          </td>

          <td><%= d.name %></td>
          <td><%= d.course %></td>
          <td><%= d.status %></td>
          <td><%= d.date.toLocaleDateString() %></td>
          <td>
            <form action="/student/<%= d._id %>" method="get">
              <button class="btn btn-primary">Update</button>
            </form>
          </td>
          <td>
            <form action="/student/delete/<%= d._id %>" method="post">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
          <!-- <td><%= d.date %></td> -->
        </tr>
        <% }) %>
      </tbody>
    </table>

    <form method="post" action="/student" enctype="multipart/form-data">
      <div class="form-group">
        <label>Name</label>
        <input
          type="text"
          class="form-control"
          name="name"
          placeholder="Enter a name"
        />
      </div>
      <div class="form-group">
        <label>Course</label>
        <input
          type="text"
          name="course"
          class="form-control"
          placeholder="Course"
        />
      </div>

      <p>Status</p>
      <input type="radio" name="status" value="active" />
      <label>Active</label><br />

      <input type="radio" name="status" value="inactive" />
      <label>Inactive</label><br />

      <div class="form-group">
        <label>Date</label>
        <input type="date" name="date" class="form-control" />
      </div>

      <div class="form-group">
        <label>Profile Picture</label>
        <input type="file" name="avatar" class="form-control" />
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <script src="js/bootstrap.bundle.js"></script>
  </body>
</html>
